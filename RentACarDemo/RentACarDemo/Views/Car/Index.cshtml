@using EntityLayer
@model List<Car>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Araçalar</h1>
                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            <br/>
                            <div style="widht:25%; float:left">
                                @Html.TextBox("Ara", null, new{@class="form-control", @placeholder="Arama"})
                            </div>
                            <div>
                                <input type="submit" name="btn" value="Ara" class="btn btn-info" />
                            </div>
                            <div>
                                <a href="~/Car/AddCaar">Ekle</a>
                            </div>

                        </div>
                    }

                </div>

            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var item in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">
                                    @item.Marka
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="lead"> Model: <b>@item.Model</b></h2>
                                            <p class="text-muted text-sm"><b>KM: </b> @item.Km</p>
                                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                                <li class="small"><span class="fa-li"></span> Renk: @item.Renk</li>

                                            </ul>
                                        </div>
                                        <div class="col-5 text-center">
                                            <img src="@item.Image" alt="" class="img-circle img-fluid">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a href="~/Car/GetDetay/@item.id" class="btn btn-sm bg-teal">
                                            <i class="fas fa-comments"> Arıntılar</i>
                                        </a>
                                        <a href="~/Car/DeleteCar/@item.id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-user"></i> Aracı Kirala
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <!-- /.card-body -->
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->

    </section>


    <br />
    <br />
    <br />
    <button href="/Writer/AddWriter" class="btn btn-danger"></button>

</body>

