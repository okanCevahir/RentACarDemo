
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
  
    <meta charset="utf-8">
    <title>Rent A Car Demo</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/Rent/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@600;700&family=Ubuntu:wght@400;500&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Rent/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/Rent/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Rent/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Rent/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/Rent/css/style.css" rel="stylesheet">
</head>

<body>
  
    <!-- Carousel Start -->
    <div class="container-fluid p-0 mb-5" id="homepage">
        <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="~/Rent/img/carousel-bg-1.jpg" alt="Image">
                    <div class="carousel-caption d-flex align-items-center">
                        <div class="container">
                            <div class="row align-items-center justify-content-center justify-content-lg-start">
                                <div class="col-10 col-lg-7 text-center text-lg-start">
                                    <h6 class="text-white text-uppercase mb-3 animated slideInDown">// RENT A CAR DEMO //</h6>
                                    <h1 class="display-3 text-white mb-4 pb-3 animated slideInDown">Nitelikli Araç Kiralama Servisi</h1>
                                    <a href="" class="btn btn-primary py-3 px-5 animated slideInDown">Daha Fazla<i class="fa fa-arrow-right ms-3"></i></a>
                                </div>
                                <div class="col-lg-5 d-none d-lg-flex animated zoomIn">
                                    <img class="img-fluid" src="~/Rent/img/carousel-1.png" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="~/Rent/img/carousel-bg-2.jpg" alt="Image">
                    <div class="carousel-caption d-flex align-items-center">
                        <div class="container">
                            <div class="row align-items-center justify-content-center justify-content-lg-start">
                                <div class="col-10 col-lg-7 text-center text-lg-start">
                                    <h6 class="text-white text-uppercase mb-3 animated slideInDown">// RENT A CAR DEMO //</h6>
                                    <h1 class="display-3 text-white mb-4 pb-3 animated slideInDown">Nitelikli Araç Kiralama Servisi</h1>
                                    <a href="" class="btn btn-primary py-3 px-5 animated slideInDown">Daha Fazla<i class="fa fa-arrow-right ms-3"></i></a>
                                </div>
                                <div class="col-lg-5 d-none d-lg-flex animated zoomIn">
                                    <img class="img-fluid" src="~/Rent/img/carousel-2.png" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Geri</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">İleri</span>
            </button>
        </div>
    </div>
    <!-- Carousel End -->
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Rent/lib/wow/wow.min.js"></script>
    <script src="~/Rent/lib/easing/easing.min.js"></script>
    <script src="~/Rent/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Rent/lib/counterup/counterup.min.js"></script>
    <script src="~/Rent/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/Rent/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/Rent/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/Rent/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/Rent/js/main.js"></script>
</body>

</html>
